<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_title_bar_newer"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/ll_params"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_random_train_time"
                        android:orientation="vertical">

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/training_time"
                        android:layout_width="360dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="130dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_traintime">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="2dp"
                            android:text="训练次数："
                            android:textColor="@color/white"
                            android:textSize="25sp" />
                        <TextView
                            android:id="@+id/tv_training_times"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="2dp"
                            android:text="20"
                            android:textColor="@color/white"
                            android:textSize="25sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:text="次"
                            android:textColor="@color/white"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="560dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="70dp">

                        <ImageView
                            android:id="@+id/img_training_times_sub"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/img_sub" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="52dp"
                            android:layout_marginTop="5dp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                        <SeekBar
                            android:id="@+id/bar_training_times"
                            style="@style/Widget.SeekBar.Normal"
                            android:layout_width="380dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="80dp"
                            android:progress="20"
                            android:max="100"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="445dp"
                            android:layout_marginTop="5dp"
                            android:text="100"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                        <ImageView
                            android:id="@+id/img_training_times_add"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="510dp"
                            android:src="@drawable/img_plus"
                            android:layout_marginTop="5dp"
                            />
                    </RelativeLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/randon_train_device"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="设备个数"
                            android:textSize="28sp" />


                        <Spinner
                            android:id="@+id/sp_dev_num"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="53dp"
                            android:background="@drawable/spinner">

                        </Spinner>

                        <Button
                            android:id="@+id/btn_on"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/img_openlight" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="训练分组"
                            android:textSize="28sp" />


                        <Spinner
                            android:id="@+id/sp_group_num"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/spinner">

                        </Spinner>
                        <Button
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="37dp"
                            android:id="@+id/btn_off"
                            android:background="@drawable/img_closelight"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:text="组别"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:text="编号"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="170dp"
                            android:text="备注"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/lv_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none"></ListView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    >
                    <Button

                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/img_situpbegin"
                        android:id="@+id/btn_begin" />
                    <Button
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/img_situppause"
                        />
                    <Button
                        android:id="@+id/btn_stop"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/img_situpstop"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_score"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_scoretitle">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="2dp"
                    android:text="训练结果"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:background="#00000000"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="运行次数:"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="遗漏次数"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="平均时间:"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="总时间"
                        android:textSize="18sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_current_times"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="---"/>

                    <TextView
                        android:id="@+id/tv_lost_times"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="---"/>

                    <TextView
                        android:id="@+id/tv_average_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="---"/>

                    <TextView
                        android:id="@+id/tv_total_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="---"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="序号"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="所用时间"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="备注"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="编号"
                        android:textSize="18sp"/>

                </LinearLayout>

                <ListView
                    android:id="@+id/lv_times"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </ListView>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
